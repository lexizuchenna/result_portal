<section class="home">
  <div class="card-wrapper">
    <div class="card">
      {{#if Result}}
        <form action="/users/admin/update-result" method="POST">
          <div class="input-group comment">
            <label for="">Head Teachers Comment</label>
            <input
              type="text"
              name="hcomment"
              placeholder="Enter Comment"
              value="{{Result.hcomment}}"
            />
          </div>

          {{!-- <div class="input-group comment">
          <label for="">Resumption Date</label>
          <input type="text" name="resDate" placeholder="Resumption date" value="{{Result.resDate}}">
        </div> --}}
          <div class="input-group comment" style="display: none;">
            <input type="text" name="resultId" value="{{Result.resultId}}" />
          </div>
          <button class="btn btn-block" type="submit">Update</button>
        </form>
      {{/if}}

    </div>
  </div>
</section>

