<main>
  <article class="container article">

    <p class="article-subtitle">Change your password</p>

    <section class="home" style="width: 100%;">

      <div class="card profile-card" style="width: 100%;">
        <div class="profile-card-wrapper">
          <form class="fund-form" action="/users/admin/changePassword" method="POST" style="width: 100%;">
            <div class="form-control" style="width: 100%;">
              <input
                type="password"
                placeholder="Enter Old Password"
                name="oldPass"
              />
            </div>
            <div class="form-control" style="width: 100%;">
              <input
                type="password"
                placeholder="Enter New Password"
                name="newPass"
              />
            </div>
            <div class="form-control" style="width: 100%;">
              <input
                type="password"
                placeholder="Repeat New Password"
                name="confirmPass"
              />
            </div>
            <button class="user-button">Change Password</button>
          </form>

        </div>
      </div>

      
      </div>
    </section>
  </article>
</main>