{{#if result}}
  <br />
  <page size="A4">
    <div style="padding: 0 30px;">
      <div class="join">
        <div class="row"><br />
          <div class="col-xs-3">
            <img
              src="/logo.png"
              class="img-responsive"
              style="background-color: #ccc;padding: 10px;max-width: 70%;"
              alt="Logo"
            />
          </div>
          <center>
            <div class="col-xs-6" style="">
              <h3
                class="text-uppercase"
                style="font-weight: 800; text-shadow: 2px 2px #ccc; color: #007bff"
              >RESULT PORTAL SEC SCHOOL.</h3>
              <p> 24 HOUSE ADDRESS ENUGU STATE, NIGERIA.</p>
              {{! <p><code>https://www.portal.mbjuturu.org/ </code></p> }}
            </div>
          </center>
          {{! <div class="col-xs-3">
            <img
              src="Student%20Mark%20Sheet_files/1759.jpg"
              class="img-circle"
              width="110"
            />
          </div> }}
          <div class="col-xs-12">
            <div class="text-center text-uppercase"><strong>Student Termly Report
                Sheet</strong></div>
          </div>
        </div>
        <div class="row">
          <br />
          <div class="col-xs-4">
            <table
              class="table table-bordered"
              style="text-transform: capitalize;"
            >
              <tbody>
                <tr>
                  <th>Name</th>
                  <td style="color: #28a745;"><b>{{capitalize
                        result.name
                      }}</b></td>
                </tr>
                <tr>
                  <th>Class</th>
                  <td style="color: #28a745;"><b>{{capitalize
                        result.className
                      }}</b></td>
                </tr>
                <tr>
                  <th>Session</th>
                  <td style="color: #28a745;"><b>{{result.session}}</b></td>
                </tr>
                <tr>
                  <th>Term</th>
                  <td style="color: #28a745;"><b>{{result.term}}</b></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="col-xs-4">
            <table
              class="table table-bordered"
              style="text-transform: capitalize;"
            >
              <tbody>
                <tr>
                  <th>Term Perfomance</th>
                  <td><b>{{result.perfomance}}</b></td>
                </tr>
                <tr>
                  <th>Class Average</th>
                  <td><b id="cl-ave"></b></td>
                </tr>
                <tr>
                  <th>Child's Average</th>
                  <td><b id="c-ave"></b></td>
                </tr>
                <tr>
                  <th>Total Subjects</th>
                  <td><b id="total-sub">{{result.totalSubject}}</b></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="col-xs-4">
            <table
              class="table table-bordered"
              style="text-transform: capitalize;"
            >
              {{! <tbody>
                <tr>
                  <th>General Performance</th>
                  <td> 64%</td>
                </tr>
                <tr>
                  <th>Grade Performance</th>
                  <td>
                    64.44%
                  </td>
                </tr>
                <tr>
                  <th>psychomotor Performance</th>
                  <td>63.33%</td>
                </tr>
                <tr>
                  <th>affective Performance</th>
                  <td>63.33%</td>
                </tr>
              </tbody> }}
            </table>
          </div>
        </div>

        <div class="row">
          <br />
          <div class="col-xs-12">
            <h5 class="text-bold">Cognitive Domain</h5>
            <table class="table table-bordered">
              <tbody>
                <tr class="table-warning">
                  <th class="cap">Subjects</th>
                  <th>1ST ASSESSMENT (30)</th>
                  <th>2ND ASSESSMENT (30)</th>
                  <th>PROJECT</th>
                  <th>EXAM</th>
                  <th class="cap">TOTAL</th>
                  <th class="cap">SUBJECT AVERAGE</th>
                  <th class="cap">GRADE</th>
                </tr>
                {{#if subjects}}
                  {{#each subjects}}
                    <tr class="table-row">
                      <td>{{this.title}}</td>
                      <td class="firstAss">{{this.firstAss}}</td>
                      <td class="secAss">{{this.secAss}}</td>
                      {{!-- <td class="thirdAss">{{this.thirdAss}}</td> --}}
                      <td class="project">{{this.project}}</td>
                      <td class="exam">{{this.exam}}</td>
                      <td class="totals">{{addNumbers
                          this.firstAss
                          this.secAss
                          this.project
                          this.exam
                        }}</td>
                      <td class="average">{{this.subAve}}</td>
                      <td>{{checkGrade
                          this.firstAss
                          this.secAss
                          this.project
                          this.exam
                        }}</td>
                    </tr>
                  {{/each}}
                {{/if}}

                <tr>
                  <td><b>Total</b></td>
                  <td><b id="first-ass-total"></b></td>
                  <td><b id="sec-ass-total"></b></td>
                  {{! <td><b id="third-ass-total"></b></td> }}
                  <td><b id="project-total"></b></td>
                  <td><b id="exam-total"></b></td>
                  <td><b id="total-total"></b></td>
                  <td><b id="average-total"></b></td>
                  <td style="display: none;">
                    <b style="display: none;" id="total-sub">
                      {{result.totalSubject}}
                    </b>
                  </td>
                  <td></td>
                </tr>
              </tbody></table>
            {{! <div class="row">
              <div class="col-xs-6">
                <div>
                  <h5 class="dock">Total Marks Obtained:
